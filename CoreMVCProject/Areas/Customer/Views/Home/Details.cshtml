@model Cart
@{
    ViewData["Title"] = "Product Details";
}

<h1>Product Details</h1>

<form method="post">
    <input type="hidden" asp-for="ProductId" />
    <div class="row">
        <div class="col-4">
            <img src="@Model.Product.ImageURL" width="200" height="200" />
        </div>
        <div class="col-8">
            <div class="row">
                <label asp-for="Product.Name">Product Name: @Model.Product.Name</label>
                <label asp-for="Product.Description">Product Description: @Model.Product.Description</label>
                <label asp-for="Product.Price">Product Price: @Model.Product.Price.ToString("0.00")</label>
                <label asp-for="Product.Category.Id">Product Category: @Model.Product.Category.Name</label>
                <div class="form-control">
                    <label asp-for="Count"></label>
                    <input type="text" asp-for="Count" class="form-control" />
                    <span asp-validation-for="Count" class="text-danger"></span>
                </div>
                <div class="form-control">
                    <button class="btn btn-success" asp-action="Index" asp-controller="Home">Back To Product</button>
                    <button class="btn btn-dark" type="submit">Add To Cart</button>
                </div>
            </div>
        </div>
    </div>
</form>


