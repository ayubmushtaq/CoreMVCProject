@model CategoryVM
@{
    ViewData["Title"] = "Index";
}
<div class="container p-4">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Category" asp-action="CreateUpdate"><i class="bi bi-plus-circle"></i>&nbsp; Create New Category</a>
        </div>
    </div>
</div>

<h1>List of Categories</h1>
<table class="table table-bordered table-striped" width="100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Categories)
        {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.DisplayOrder
            </td>
            <td>
                    <a asp-action="CreateUpdate" asp-controller="Category" asp-route-Id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                    <a asp-action="Delete" asp-controller="Category" asp-route-Id="@item.Id"><i class="bi bi-trash3"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>

