@model ProductVM
@{
    ViewData["Title"] = "Index";
}
<div class="container p-4">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Products</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Product" asp-action="CreateUpdate"><i class="bi bi-plus-circle"></i>&nbsp; Create New Product</a>
        </div>
    </div>
</div>

<h1>List of Products</h1>
<table id="ProductTable" class="table table-bordered table-striped" width="100%">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Description
            </th>
            <th>
                Price
            </th>
            <th>
                Category
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
</table>

@section scripts{
    <script src="~/js/Product.js" ></script>
}

